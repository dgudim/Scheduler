<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/round_bg_calendar_selection"
    android:orientation="vertical"
    android:paddingBottom="2dp">

    <TextView
        android:id="@+id/calendarDayText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:textAlignment="center"
        android:textColor="?colorPrimary"
        android:textIsSelectable="false"
        android:textSize="16sp"
        tools:text="22" />

    <View
        android:id="@+id/event_indicator1"
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1.5dp"
        android:background="@drawable/round_bg_10dp"
        android:backgroundTint="@color/transparent" />

    <View
        android:id="@+id/event_indicator2"
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1.5dp"
        android:background="@drawable/round_bg_10dp"
        android:backgroundTint="@color/transparent" />

    <View
        android:id="@+id/event_indicator3"
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1.5dp"
        android:background="@drawable/round_bg_10dp"
        android:backgroundTint="@color/transparent" />

    <View
        android:id="@+id/event_indicator4"
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1.5dp"
        android:background="@drawable/round_bg_10dp"
        android:backgroundTint="@color/transparent" />

</LinearLayout>
