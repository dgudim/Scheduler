<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <prototype.xd.scheduler.views.CheckBox
        android:id="@+id/check_box"
        style="@android:style/Widget.DeviceDefault.CompoundButton.CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        tools:ignore="TouchTargetSizeCheck" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/calendar_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:text="calendar_name"
            android:textAppearance="@style/SmallHeading"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/event_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="event_count"
            android:textAppearance="@style/SmallHeadingSubtext"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/color_select_button"
        style="@style/DefaultImageButton"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:contentDescription="@string/action_per_color_settings"
        app:srcCompat="@drawable/ic_palette_45"
        tools:ignore="ImageContrastCheck,TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/settings_button"
        style="@style/DefaultImageButton"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:contentDescription="@string/action_settings"
        app:srcCompat="@drawable/ic_settings_45"
        tools:ignore="ImageContrastCheck,TouchTargetSizeCheck" />

</LinearLayout>